<script>
function plus(){
	var obj1 = document.querySelector("#it1");
	var obj2 = document.querySelector("#it2");
	var obj3 = document.querySelector("#it3")
	
	var a = obj1.value;
	var b = obj2.value;
	
	var aa = parseInt(a);
	var bb = parseInt(b);
	
	var c = aa + bb;
	obj.value = c;
}
function minus(){
	var oa = document.querySelector("#it1");
	var ob = document.querySelector("#it2");
	var obj = document.querySelector("#it3")
	var a = oa.value;
	var b = ob.value;
	var c = parseInt(a) - parseInt(b);
	obj.value = c;
}

function multiply(){
	var oa = document.querySelector("#it1");
	var ob = document.querySelector("#it2");
	var obj = document.querySelector("#it3")
	var a = oa.value;
	var b = ob.value;
	var c = parseInt(a) * parseInt(b);
	obj.value = c;
}

function divide(){
	var oa = document.querySelector("#it1");
	var ob = document.querySelector("#it2");
	var obj = document.querySelector("#it3")
	var a = oa.value;
	var b = ob.value;
	var c = parseInt(a) / parseInt(b);
	obj.value = c;
}
